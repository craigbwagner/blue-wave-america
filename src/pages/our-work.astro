---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Image from "astro/components/Image.astro";
import Profile from "../components/Profile.astro";

const fightingForPoliticians = [
  {
    name: "Gay Valimont (D)",
    position: "Florida 1st Congressional District",
    img: "/people/gay-valimont.jpeg"
  },
  {
    name: "Joshua Weil (D)",
    position: "Florida 6th Congressional District",
    img: "/people/joshua-weil.jpg"
  },
  {
    name: "Blake Gendebien (D)",
    position: "New York 21st Congressional District",
    img: "/people/blake-gendebien.png"
  },
  {
    name: "Unknown",
    position: "Future Democratic Nominee for Virginia Governor",
    img: "/people/user.png"
  },
  ];

const ourWorkPoliticians = [
	{
		name: "Raphael Warnock (D)",
		position: "Georgia Senate",
		img: "/people/raphael-warnock.jpg",
	},
	{
		name: "John Fetterman (D)",
		position: "Pennsylvania Senate (red to blue)",
		img: "/people/john-fetterman.jpg",
	},
	{
		name: "Josh Shapiro (D)",
		position: "Pennsylvania Governor",
		img: "/people/josh-shapiro.jpg",
	},
  {
    name: "Tammy Baldwin (D)",
		position: "Wisconsin Senate",
		img: "/people/tammy-baldwin.png",
	},
  {
    name: "Josh Stein (D)",
    position: "North Carolina Governor",
    img: "/people/josh-stein.png",
  },
  {
		name: "Elissa Slotkin (D)",
		position: "Michigan Senate",
		img: "/people/elissa-slotkin.jpg",
	},
  {
		name: "Jon Ossoff (D)",
		position: "Georgia Senate",
		img: "/people/jon-ossoff.jpg",
	},
];
---

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<title>Blue Wave America</title>
	<link rel="icon" type="image/x-icon" href="/graphics/favicon.png" />
</head>
<Header />
<main class="ml-5 my-10">
	<section>
		<h1 class="text-5xl text-center mb-6 font-extrabold tracking-tight text-sky-600 m:text-3xl">Our Work</h1>
	</section>
	<section class="flex flex-col gap-8">
    <div class="grid gap-8 grid-cols-3 py-6 px-6 mx-auto max-w-5xl">
			<div class="space-y-6">
				<h2 class="text-3xl font-extrabold tracking-tight text-gray-800">We're Fighting to Elect</h2>
				<p class="text-lg text-gray-500">
					Democrats that will fight for Democracy.
				</p>
			</div>
			<div class="col-span-2 mt-6 px-3">
				<ul class="grid grid-cols-1 gap-12 md:grid-cols-2" role="list">
					{fightingForPoliticians.map((politician) => <Profile politician={politician} />)}
				</ul>
			</div>
		</div>
		<div class="grid gap-8 grid-cols-3 py-8 px-6 mx-auto max-w-5xl">
			<div class="space-y-6">
				<h2 class="text-3xl font-extrabold tracking-tight text-gray-800">Our Work</h2>
				<p class="text-lg text-gray-500">
					We fought hard in 2022 and 2024 and we'll keep
					fighting for Democracy <strong>Every Day</strong>.
				</p>
			</div>
			<div class="col-span-2 mt-6">
				<ul class="grid grid-cols-1 gap-12 md:grid-cols-2" role="list">
					{ourWorkPoliticians.map((politician) => <Profile politician={politician} />)}
				</ul>
			</div>
		</div>
	</section>
	<section class="flex flex-col gap-8">
    <h2 class="text-4xl font-extrabold text-gray-800">Heading</h2>
	</section>
</main>
<Footer />

---
import Image from "astro/components/Image.astro";
import SignupForm from './SignupForm.astro';
---
<footer class="w-full bg-gray-900 flex flex-col items-center">
  <SignupForm />
  <p class='max-w-3xl py-4 mx-auto text-lg text-center text-gray-400 uppercase'>
    Follow Us
  </p>
  <div class='flex w-60 h-12 justify-between gap-5 items-center'>
    <a href='https://www.facebook.com/BlueWaveAmerica' target='_blank'>
      <Image
        src="/social-media-icons/facebook-icon.svg"
        alt='Facebook icon'
        height='36'
        width='36'
      />
    </a>
    <a href='https://www.instagram.com/bluewaveamerica/' target='_blank'>
      <Image
        src="/social-media-icons/instagram-icon.svg"
        alt='Instagram icon'
        height='35'
        width='35'
      />
    </a>
    <a href='https://bsky.app/profile/bluewaveamerica.bsky.social' target='_blank'>
      <Image
        src=/social-media-icons/bluesky-icon.png
        alt='BlueSky icon'
        height='35'
        width='35'
      />
    </a>
    <a href='https://x.com/BlueWaveAm' target='_blank'>
      <Image
        src="/social-media-icons/x-logo.png"
        alt='X icon'
        height='42'
        width='42'
      />
    </a>
  </div>
  <p class="max-w-3xl py-6 mx-auto text-center text-lg text-gray-400 uppercase">
    Contact: <a href="mailto:info@bluewaveamerica.com">info@bluewaveamerica.com</a>
  </p>
  <p class=
  "max-w-3xl py-4 px-2 mx-2 text-center text-lg text-gray-400 uppercase border border-gray-700">
    Paid for by Blue Wave America (bluewaveamerica.com) and not authorized by any candidate or
    candidate's committee
  </p>
  <p class="px-16 py-6 pb-6 text-center text-lg text-gray-400">
    P.O. Box 4033<br>
    Louisville, KY 40204-0033
  </p>
  <p class="max-w-3xl px-16 pb-8 mx-auto text-center text-lg text-gray-400 uppercase">
    <a href="/privacy-policy">Privacy Policy</a>
  </p>
</footer>

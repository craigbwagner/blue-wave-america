---
import Image from "astro/components/Image.astro";
import facebookIcon from "../../public/social-media-icons/facebook-icon.svg";
import xIcon from "../../public/social-media-icons/x-logo.png";
import instagramIcon from "../../public/social-media-icons/instagram-icon.svg";
import blueskyIcon from "../../public/social-media-icons/bluesky-icon.png";
---

<script>
	const mobileDropdownButton = document.getElementById("mobile-dropdown-button");
	const mobileDropdownMenu = document.getElementById("mobile-dropdown-menu");
	mobileDropdownButton.addEventListener("click", () => {
		mobileDropdownMenu.classList.toggle("hidden");
	});

	const mobileMenuButton = document.getElementById("mobile-menu-button");
	const mobileMenuLinks = document.getElementById("mobile-menu-links");
	mobileMenuButton.addEventListener("click", () => {
		mobileMenuLinks.classList.toggle("hidden");
	});
</script>

<nav>
	<div class="max-w-full mx-auto px-2 py-2 my-6 sm:bg-gray-800 sm:px-6 md:py-3 lg:px-8">
		<div class="relative flex items-center justify-center">
			<!-- Mobile menu button-->
			<div class="absolute left-0 flex items-center sm:hidden">
				<button
					type="button"
					class="inline-flex items-center justify-center p-2 my-4 rounded-md text-gray-700 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
					aria-controls="mobile-menu"
					id="mobile-menu-button"
					aria-expanded="false"
				>
					<span class="sr-only">Open main menu</span>
					<!-- Icon when menu is closed. -->
					<svg
						class="block h-6 w-6"
						xmlns="http://www.w3.org/2000/svg"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
						aria-hidden="true"
					>
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"
						></path>
					</svg>
					<!-- Icon when menu is open. -->
					<svg
						class="hidden h-6 w-6"
						xmlns="http://www.w3.org/2000/svg"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
						aria-hidden="true"
					>
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"
						></path>
					</svg>
				</button>
			</div>

			<!-- Desktop Navbar -->
			<div class="flex">
				<div class="hidden sm:ml-6 sm:block md:ml-0">
					<div class="flex justify-between items-center md:w-screen max-w-screen-lg">
						<a
							class="text-gray-200 text-lg font-medium bg-sky-600 transition duration-500 hover:bg-sky-500 px-4 py-1.5 rounded-md md:py-2 lg:text-xl"
							href="/work-with-us">
              Volunteer</a
						>
						<a
							href="/"
							class="text-gray-200 text-lg font-medium transition duration-500 hover:text-sky-500 px-3 py-1 rounded-md text-med lg:text-xl"
							>Home</a
						>
            <a
            href="/who-we-are"
            class="text-gray-200 text-lg font-medium transition duration-500 hover:text-sky-500 px-3 py-1 rounded-md lg:text-xl"
            >Who We Are</a
            >
						<a
            href="/states"
            class="text-gray-200 text-lg font-medium  transition duration-500 hover:text-sky-500 px-3 py-1 rounded-md text-med lg:text-xl"
            >States</a
						>
            <a
              href="/our-work"
              class="text-gray-200 text-lg font-medium transition duration-500 hover:text-sky-500 px-3 py-1 rounded-md lg:text-xl"
              >Our Work</a
            >
						<div class="flex justify-between gap-4 items-center">
              <a href="https://www.facebook.com/BlueWaveAmerica" target="_blank">
								<Image src={facebookIcon} alt="Facebook icon" height="32" width="32" />
							</a>
							<a href="https://www.instagram.com/bluewaveamerica/" target="_blank">
								<Image src={instagramIcon} alt="Instagram icon" height="31" width="31" />
							</a>
							<a href="https://bsky.app/profile/bluewaveamerica.bsky.social" target="_blank">
								<Image src={blueskyIcon} alt="Bluesky icon" height="31" width="31" />
							</a>
              <a href="https://x.com/BlueWaveAm" target="_blank">
                <Image src={xIcon} alt="X icon" height="36" width="36" />
              </a>
						</div>
            <a
              class="text-gray-200 w-38 text-lg font-medium text-center bg-sky-600 transition duration-500 hover:bg-sky-500 px-5 py-1.5 rounded-md md:py-2 lg:text-xl"
              href="https://secure.actblue.com/donate/blue-wave-america-frontpage"
              target="_blank">Donate</a
            >
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Mobile menu, show/hide based on menu state. -->
	<div class="sm:hidden" id="mobile-menu">
    <button
      type="button"
      class="text-gray-700 hover:bg-gray-700 hover:text-white block w-full text-left px-3 py-1.5 rounded-md text-base font-medium"
      id="mobile-dropdown-button"
    >
		<div class="px-2 py-1 hidden" id="mobile-menu-links">
			<a
				href="/"
				class="text-gray-700 hover:bg-gray-700 hover:text-white block px-3 py-1.5 rounded-md text-base font-medium"
				>Home</a
			>
      <a
        href="/who-we-are"
        class="text-gray-700 hover:bg-gray-700 hover:text-white block px-3 py-1.5 rounded-md text-base font-medium"
        >Who We Are</a
      >
			<a
				href="/states"
				class="text-gray-700 hover:bg-gray-700 hover:text-white block px-3 py-1.5 rounded-md text-base font-medium"
				>States</a
			>
			<a
				href="/our-work"
				class="text-gray-700 hover:bg-gray-700 hover:text-white block px-3 py-1.5 rounded-md text-base font-medium"
				>Our Work</a
			>
				<a
					href="https://secure.actblue.com/donate/blue-wave-america-frontpage"
					class="text-gray-700 hover:bg-gray-700 hover:text-white block px-3 py-1.5 rounded-md text-base font-medium"
					target="_blank">Donate</a
				>
				<a
					href="/work-with-us"
					class="text-gray-700 hover:bg-gray-700 hover:text-white block px-3 py-1.5 rounded-md text-base font-medium"
					target="_blank">Volunteer</a
				>
			</div>
		</div>
	</div>
</nav>
